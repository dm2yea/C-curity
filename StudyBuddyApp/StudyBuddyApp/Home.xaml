<Page x:Class="StudyBuddyApp.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyBuddyApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Slider Grid.Column="5" Maximum="1" Width="80"/>
        <TextBlock Text="Welcome to Study Buddy" Grid.Column="1" Grid.ColumnSpan="3" FontSize="40" TextAlignment="Center" Margin="10"/>
        
        <Button Content="New Module" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="2" Width="80" Height="65" Margin="0" Background="#FF4ED9D9" Click="NewModule"/>
        <Button Content="Open Module" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="3" Width="80" Height="65" Margin="0" Background="#FF4ED9D9" Click="NewModule"/>
    </Grid>
</Page>
